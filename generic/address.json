{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.occrp.org/generic/address.json#",
  "title": "Address",
  "plural": "Addresses",
  "description": "An address object",
  "type": "object",
  "inline": true,
  "oneOf": [
      {"$ref": "https://schema.occrp.org/generic/any.json#"}
  ],
  "properties": {
    "text": {
      "title": "Text",
      "type": "text"
    },
    "street_address": {
      "title": "Street address",
      "type": "string"
    },
    "locality": {
      "title": "City/Town",
      "type": "string"
    },
    "region": {
      "title": "Region",
      "type": "string"
    },
    "postal_code": {
      "title": "Postal code",
      "type": "string"
    },
    "country": {
      "type": "string",
      "format": "country-code"
    }
  }
}

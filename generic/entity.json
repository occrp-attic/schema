      "minLength": 2,
      "maxLength": 5
    },
    "links": {
      "title": "Related links",
      "description": "URLs to documents about the person",
      "type": "array",
      "rdfReverse": "entity",
      "items": {"$ref": "https://schema.occrp.org/generic/link.json#"}

      "maxLength": 4096
    },
    "identifiers": {
      "title": "Identifiers",
      "type": "array",
      "items": {"$ref": "https://schema.occrp.org/generic/identifier.json#"}
    },
    "jurisdiction_code": {
      "title": "Jurisdiction",
      "sortIndex": 90,
      "type": "string",
      "description": "Code representing the jurisdiction/company register which is the canonical record of the companyâ€™s existence. Uses underscored ISO 3166-2 to represent it, e.g. es for Spain, us_de for Delaware",

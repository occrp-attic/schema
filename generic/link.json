{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.occrp.org/generic/link.json#",
  "title": "Link",
  "description": "A URL",
  "type": "object",
  "inline": true,
  "required": ["url"],
  "properties": {
    "url": {
      "title": "URL",
      "description": "A URL",
      "type": "string",
      "format": "uri",
      "rdfType": "id"
    },
    "note": {
      "title": "Note",
      "description": "A note, e.g. 'Wikipedia page'",
      "type": ["string", "null"]
    }
  }
}

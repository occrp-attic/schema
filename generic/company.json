{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://schema.occrp.org/generic/company.json#",
  "title": "Company",
  "description": "A company in OpenCorporates",
  "type": "object",
  "oneOf": [
      {"$ref": "http://schema.occrp.org/generic/organization.json#"}
  ],
  "properties": {
    "company_number": {
      "type": "string",
      "title": "Company number",
      "description": "unique identifier given by the corporate register with which it is incorporated",
      "minLength": 1
    },
    "incorporation_date": {
      "type": "string",
      "format": "date"
    },
    "retrieved_at": {
      "type": "string",
      "format": "date-time"
    },
    "current_status": {
      "type": ["string", "null"]
    },
    "company_type": {
      "type": ["string", "null"]
    },
    "registry_url": {
      "type": "string"
    },
    "website": {
      "type": "string",
      "minLength": 5
    },
    "telephone_number": {
      "type": "string",
      "minLength": 4
    },
    "fax_number": {
      "type": "string",
      "minLength": 4
    },
    "registered_address": {
      "$ref": "http://schema.occrp.org/generic/address.json"
    },
    "headquarters_address": {
      "$ref": "http://schema.occrp.org/generic/address.json"
    },
    "mailing_address": {
      "$ref": "http://schema.occrp.org/generic/address.json"
    },
    "filings": {
      "type": "array",
      "items": {
        "$ref": "http://schema.occrp.org/generic/filing.json"
      }
    },
    "industry_codes": {
      "type": "array",
      "items": {
        "$ref": "http://schema.occrp.org/generic/industry_code.json#"
      }
    }
  },
  "additionalProperties": false
}
